includes:
  - ./vendor/nunomaduro/larastan/extension.neon

parameters:
  autoload_files:
    - vendor/autoload.php
  level: 7
  checkMissingIterableValueType: false
  paths:
    - app
  ignoreErrors:
    - '#Method App\\Exceptions\\Handler::render()\(\).#'
    - '#Call to an undefined method ([a-zA-Z]|\\|\||<|>)*::hasRole\(\)#'
    - '#Undefined variable\: \$router#'
